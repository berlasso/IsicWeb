
@{
    ViewBag.Title = "Cuenta confirmada!";
}


<div class="center wow fadeInDown animated tile-light">
    <h1>@ViewBag.Title</h1>
</div>



<div class="row wow fadeInDown animated ">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">
        <div class="panel panel-default tile wow fadeInDown animated" style="margin: 60px 0 80px 0">
            <div class="panel-heading">

                <h4>Cuenta confirmada correctamente.</h4>

            </div>
            <div class="panel-body">
                <div>
                    <p>
                        Usuario: @ViewBag.Usuario<br />
                        Token recibido: @ViewBag.Token<br />
                    </p>
                    <p>
                        Gracias por confirmar la cuenta. Ya puede usar el sistema sin inconvenientes.
                    </p>
                    <p>
                        Para iniciar la sesión, haga click @Html.ActionLink("Aquí", "Login", "Account", new { area = "" }, htmlAttributes: new { id = "loginLink", @class = "btn btn-alt btn-sm" })
                    </p>
                </div>
            </div>
        </div>
    </div>

</div>

