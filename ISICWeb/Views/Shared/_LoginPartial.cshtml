@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @*@User.Identity.Name*@
                @*@Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "InfoUsuario", "Account", new {area = ""}, htmlAttributes: new {title = "Administrar"})*@
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-user fa-fw"></i>@User.Identity.GetUserName() <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("Perfil", "InfoUsuario", "Account", new {area = ""}, new {onclick = "showPageLoadingSpinner()"})</li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
                </ul>
            </li>
            
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" style="min-width: 90px!important;">Sesión <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
                <li>@Html.ActionLink("Registrarse", "InfoRegistracion", "Account", new { area = "" }, htmlAttributes: new { id = "registerLink" })</li>
                <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", new { area = "" }, htmlAttributes: new { id = "loginLink" })</li>
            </ul>
        </li>
    </ul>

}
