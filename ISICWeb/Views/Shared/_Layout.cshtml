    @Scripts.Render("~/bundles/jquery-ui")

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundles/fabric")
    @Scripts.Render("~/bundles/prettyPhoto")
    @Scripts.Render("~/bundles/jqueryval")
