@model ISIC.Entities.Imputado

@{
    ViewBag.Title = "Borrar";
}

<br>

<div class="alert alert-danger">
    <strong>Está seguro que quiere borrar este Imputado?</strong>
    <span></span>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProntuarioSIC)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProntuarioSIC)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CodigoDeBarra)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CodigoDeBarra)
        </dd>
    </dl>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="form-group" style="position:relative;float:left;margin-top:-5px;margin-left:180px">
            <div>
                <button type="button" class="btn btn-primary" title="Volver" onclick="location.href='@Url.Action("Index", "Imputado")';return false">
                    <span class="glyphicon glyphicon-arrow-left"></span>
                </button>
                <button type="submit" class="btn btn-danger" title="Borrar">
                    <span class="glyphicon glyphicon-trash"></span>
                </button>
            </div>
        </div>

        <br>
        <br>
    }
</div>
